{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ESNext",
      "moduleResolution": "node",
      "strict": true,
      "declaration": false,
      "removeComments": false,
      "alwaysStrict": true,
      "pretty": false,
      "skipLibCheck": true,
      "sourceMap": false,
      "esModuleInterop": false,
      "baseUrl": ".",
      "paths": {
        "@semblance/structures/*": ["structures/*"],
        "@semblance/models/*": ["models/*"],
        "@semblance/events/*": ["events/*"],
        "@semblance/constants/*": ["constants/*"],
        "@semblance/config": ["config.js"],
        "@semblance": ["./*"]
      },
    },
      "watchOptions": {
        "watchFile": "useFsEvents",
        "watchDirectory": "useFsEvents",
        "fallbackPolling": "dynamicPriority"
    },
    "exclude": [
      "node_modules",
      "./node_modules",
      "./node_modules/*",
      "./node_modules/@types/node/index.d.ts"
    ]
  }