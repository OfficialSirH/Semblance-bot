datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
}

model BoosterReward {
  userId        String   @id
  rewardingDate DateTime
}

model Game {
  player          String   @id
  money           Float    @default(0)
  percentIncrease Float
  cost            Float
  level           Int      @default(1)
  checkedLevel    Int      @default(1)
  lastCollected   DateTime @updatedAt
  profitRate      Float
}

model Information {
  type    String  @id
  value   String
  expired String?
  footer  String?
}

model BoosterCodes {
  id   Int    @id @default(autoincrement())
  code String
}

model Leaderboard {
  type  String @id
  /// [LeaderboardUser]
  users Json[]
}

model Reminder {
  userId    String @id
  /// [UserReminder]
  reminders Json[]
}

model UserData {
  token                            String   @id
  discord_id                       String   @unique
  metabits                         BigInt   @default(0) @db.BigInt
  dino_rank                        Int      @default(0)
  prestige_rank                    Int      @default(0)
  beyond_rank                      Int      @default(0)
  singularity_speedrun_time        Float?
  all_sharks_obtained              Boolean  @default(false)
  all_hidden_achievements_obtained Boolean  @default(false)
  beta_tester                      Boolean  @default(false)
  edited_timestamp                 DateTime @updatedAt
}

model Vote {
  userId    String @id
  voteCount Int    @default(1)
}
